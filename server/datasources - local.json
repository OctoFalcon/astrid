{
  "db": {
    "name": "db",
    "connector": "memory"
  },
  "wcsCategoryDS": {
    "name": "wcsCategoryDS",
    "connector": "rest",
    "debug": "true",
    "operations": [
      {
        "template": {
          "method": "GET",
          "url": "http://localhost/wcs/resources/store/11001/categoryview/@top",
          "headers": {
            "content-type": "application/json"
          }
        },
        "functions": {
          "getTopCategories": [
          ]
        }
      },
      {
        "template": {
          "method": "GET",
          "url": "http://localhost/wcs/resources/store/11001/categoryview/byId/{categoryId}",
          "headers": {
            "content-type": "application/json"
          }
        },
        "functions": {
          "getCategoryById": [
            "categoryId"
          ]
        }
      },
      {
        "template": {
          "method": "GET",
          "url": "http://localhost/wcs/resources/store/11001/categoryview/byParentCategory/{categoryId}",
          "headers": {
            "content-type": "application/json"
          }
        },
        "functions": {
          "getCategoryByParent": [
            "categoryId"
          ]
        }
      }
    ]
  },
  "wcsPriceDS": {
    "name": "wcsPriceDS",
    "connector": "rest"
  },
  "wcsAuthenticationDS": {
    "name": "wcsAuthenticationDS",
    "connector": "rest"
  },  
  "wcsInventoryDS": {
    "name": "wcsInventoryDS",
    "connector": "rest"
  },
  "wcsOrderDS": {
    "name": "wcsOrderDS",
    "connector": "rest"
  },
  "wcsProductDS": {
    "name": "wcsProductDS",
    "connector": "rest",
    "debug": "true",
    "operations": [
      {
        "template": {
          "method": "GET",
          "url": "http://localhost/wcs/resources/store/11001/productview/byId/{!productId}",
          "headers": {
            "content-type": "application/json"
          }
        },
        "functions": {
          "findProductById": ["productId"]
        }
      },
      
      {
        "template": {
          "method": "GET",
          "url": "http://localhost/search/resources/store/11001/productview/bySearchTerm/{!searchTerm}}?pageNumber=1&pageSize=16",
          "headers": {
            "content-type": "application/json"
          },
          "query": {
            "currency": "{currency=USD}",
            "langId": "{langId=-1}",
            "responseFormat": "{responseFormat=json}"
          }
        },
        "functions": {
          "findProductsBySearchTerm": [
            "searchTerm"
          ]
        }
      },
      
      {
        "template": {
          "method": "GET",
          "url": "http:/localhost/search/resources/store/11001/productview/{!partNumber}",
          "headers": {
            "content-type": "application/json"
          },
          "query": {
            "currency": "{currency=USD}",
            "langId": "{langId=-1}",
            "responseFormat": "{responseFormat=json}"
          }
        },
        "functions": {
          "findProductByPartNumber": [
            "partNumber"
          ]
        }
      },
     
      {
        "template": {
          "method": "GET",
          "url": "http://localhost/wcs/resources/store/11001/productview/byCategory/{!categoryId}",
          "headers": {
            "content-type": "application/json"
          }
        },
        "functions": {
          "findProductsByCategory": [
            "categoryId"
          ]
        }
      }
    ]
  }
}
